
@{
    ViewBag.Title = "Yeni Üniversite Ekle";
    Layout = "~/Views/Sinifim_General_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h4>Yeni Üniversite Ekleme</h4>
                <a href="/_admin/university/add" class="btn btn-primary btn-sm">Üniversiteler Listesi</a>
            </div>
            <div class="box-body">
                <form action="/_admin/university/add" method="post">
                    <div class="form-group">
                        <label for="uniadi">Üniversite Adı</label>
                        <input type="text" class="form-control" name="uniadi" id="uniadi" placeholder="Üniversite adını giriniz">
                    </div>
                    <div class="form-group">
                       <button type="submit" class="btn btn-success btn-sm">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

